{
  "name": "ai-case-management-system",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern AI-powered case management system built with React 18",
  "keywords": [
    "react",
    "vite",
    "tailwindcss",
    "case-management",
    "ai-assistant"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "lint:strict": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0 --no-error-on-unmatched-pattern",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "docs:generate": "jsdoc -c jsdoc.config.json",
    "docs:serve": "npx http-server ./docs/generated -p 8080",
    "performance:setup": "node scripts/setup-performance.js",
    "lighthouse": "npx lighthouse http://localhost:3000 --view",
    "lighthouse:ci": "lhci autorun",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build:analyze": "npm run build && npx vite-bundle-analyzer",
    "serve": "npm run build && npm run preview",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist"
  },
  "dependencies": {
    "framer-motion": "^12.27.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.6.0",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "terser": "^5.46.0",
    "vite": "^5.0.8",
    "vitest": "^4.0.18"
  }
}
